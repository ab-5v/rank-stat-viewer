.b-input__input
  position: relative;
  padding: 2px 5px;
  border: none;
  box-shadow: 0 0 3px rgba(0,0,0,.3) inset, 0 1px 3px rgba(0,0,0,.4) inset, 1px 1px 1px rgba(255,255,255, .3);
  font: 16px/26px arial, sans-serif;

  &:focus
    outline: none;
    box-shadow: 0 0 3px rgba(0,0,0,.3) inset, 0 1px 3px rgba(0,0,0,.4) inset, 1px 1px 1px rgba(255,255,255, .3), 0 0 2px 1px rgba(255,204,0,.5);

